<section>
	<p>
		{{ account.login != NULL ? "loggé en tant que " ~ account.login : "login unknow" }}
	</p>

    <div class="password-copied hide">
        <button
            type="button"
        >
            <i class="fas fa-times">
            </i>
        </button>

        <span>
            password is copied with success
            &emsp;
            <i class="fas fa-check"></i>
        </span>
    </div>

    <div class="password-wrap">

        <span class="hide-pass">
            {% for char in account.password|split('')|slice(0,8) %}*{% endfor %}
        </span>
    
        <span class="visible-pass hide">
            <input type="text" value="{{account.password}}">
        </span>

    </div>

    {% if account.codeRecup != NULL %}
        
        <div>


            <details>
                <summary>
                    your <b>{{ account.codeRecup|length }}</b> code get account
                </summary>
                
                <ul class="code-recup-list">
                    {% for key,codeRecup in account.codeRecup  %}
                        <li 
                            class="code-recup-item"
                            id="item-code-recup-{{key}}"
                            data-item-slug="{{account.slug}}"
                            data-item-id="{{account.id}}"
                            data-item-code="{{codeRecup}}"
                        >
                            <span>
                                {{codeRecup}}
                            </span>
                            <button
                                type="button"
                                data-item-selector="#item-code-recup-{{key}}"
                            >
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </li>
                    {% endfor %}
                </ul>

            </details>

        </div>

    {% endif %}

    <div class="date-wrap">

        <p class="create-at">
            enregistré le
            <b>
            {{ account.createAt|date('d/m/Y') }}
            </b> à
            <b>
            {{ account.createAt|date('H:i:s') }}
            </b>
        </p>

        {% if account.updateAt == NULL %}
            <p class="never-update">
                N'a jamais été modifié
            </p>
        {% else %}
            <p class="last-update">
                modifié la dernière fois le
                <b>
                {{ account.updateAt|date('d/m/Y') }}
                </b> à
                <b>
                {{ account.updateAt|date('H:i:s') }}
                </b>
            </p>
        {% endif %}

        <p
            class="diff-update {{ 
                account.diffDaysLastUpdate >= 20 ? 
                "error" : 
                account.diffDaysLastUpdate >= 10 ? 
                "warning"  : "success" 
            }}"
        >
            <span>
                N'a pas été modifié depuis
                <b>{{ account.diffDaysLastUpdate }}</b> jours
            </span>
        </p>

    </div>

    <div
        class="control-wrap"
    >

        <ul>
            <li class="update-control-item">
                <a href="{{path("account.update" , {
                    "id": account.id
                    ,"slug": account.slug
                } )}}">
                    <i class="fas fa-pen"></i>
                </a>
            </li>

            <li class="back-control-item">
                <a href="{{path("account.index")}}">
                    retour
                </a>
            </li>

            <li class="remove-control-item">
                <a href="{{path("account.remove" , {
                    "id": account.id
                    ,"slug": account.slug
                } )}}">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </li>

        </ul>

    </div>

</section>
