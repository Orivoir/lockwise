
{% if account.codeRecups != NULL %}
    
    <div>


        <details>
            <summary>
                your <b>{{ account.codeRecups|length }}</b> code get account
            </summary>
            
            <ul class="code-recup-list">
                {% for key,codeRecup in account.codeRecups  %}
                    <li 
                        class="code-recup-item"
                        id="item-code-recup-{{key}}"
                        data-item-slug="{{account.slug}}"
                        data-item-id="{{account.id}}"
                        data-item-code="{{codeRecup.id}}"
                    >
                        <span>
                            {{codeRecup.content}}
                        </span>
                        <button
                            type="button"
                            class="btn-remove-type"
                            data-item-selector="#item-code-recup-{{key}}"
                        >
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </li>
                {% endfor %}
            </ul>

        </details>

    </div>

{% endif %}